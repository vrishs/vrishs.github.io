{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "IMF Credit Lending Outstanding Relative to Global GDP ",
    "subtitle": "Credit outstanding to all members, SDRs (%), Source: IMF and World Bank",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/vrishs/vrishs.github.io/main/data_IMF_creditOutstandingGDP.csv"
  },
  "height": 300,
  "width": 300,
  "mark": {"type": "bar", "color": "rgb(0,47,167"},
  "encoding": {
    "x": {
      "field": "Years",
      "title": "Year",
      "type": "temporal",
      "axis": {"title": null, "grid": false, "ticks": false, "labelAngle": 45}
    },
    "y": {
      "field": "%_Credit_Divided_by_World_GDP",
      "type": "quantitative",
      "title": "% Credit lent compared to World GDP",
      "axis": {"grid": false}
    },
     "tooltip": [
      {"field": "Year", "type": "temporal", "title": "Year"},
      {"field": "%_Credit_Divided_by_World_GDP", "type": "quantitative", "title": "% Credit lent compared to World GDP"}
      
    ]
  },
  "config": {}
}
  
